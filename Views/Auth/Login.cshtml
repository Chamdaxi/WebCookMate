@model WebCookmate.Models.LoginViewModel
@{
    ViewData["Title"] = "Login - WebCookmate";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-logo">
                <img src="~/images/logos/chef-hat.png" alt="CookMate" class="auth-logo-img">
                <h1 class="auth-logo-text">CookMate</h1>
            </div>
            <h2 class="auth-title">Welcome Back</h2>
            <p class="auth-subtitle">Sign in to your account</p>
        </div>

        <form asp-action="Login" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="auth-error-summary"></div>
            
            <div class="form-group">
                <label asp-for="Email" class="form-label">Email Address</label>
                <input asp-for="Email" class="form-input" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="form-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-input" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="form-error"></span>
            </div>

            <div class="form-group form-checkbox-group">
                <label class="form-checkbox">
                    <input asp-for="RememberMe" type="checkbox" />
                    <span class="checkmark"></span>
                    Remember me
                </label>
            </div>

            <button type="submit" class="auth-button auth-button-primary">
                <span class="button-text">Sign In</span>
                <span class="button-icon">â†’</span>
            </button>
        </form>

        <div class="auth-footer">
            <p class="auth-link-text">
                Don't have an account? 
                <a asp-action="Register" class="auth-link">Sign up here</a>
            </p>
        </div>
    </div>
</div>
