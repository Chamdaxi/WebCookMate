<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CookMate Chat</title>
    <link rel="stylesheet" href="~/css/chat.css" asp-append-version="true" />
</head>
<body>
    <!-- Mobile Menu Toggle -->
    <button class="mobile-menu-toggle" onclick="toggleMobileMenu()">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <line x1="3" y1="12" x2="21" y2="12"></line>
            <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
    </button>

    <div class="main-container">
        <!-- Sidebar -->
        <div class="sidebar" id="chatSidebar">
            <div class="sidebar-header">
                <div class="menu-icon">
                    <div class="menu-line"></div>
                </div>
                <h2 class="app-title">CookMate</h2>
            </div>
            
            <div class="sidebar-content">
                <div class="nav-item active" id="newChatBtn">
                    <div class="nav-icon">
                        <img src="~/images/icons/chat/Newchat.png" alt="New Chat" class="icon-img" />
                    </div>
                    <span>New chat</span>
                </div>
                
                <div class="nav-item" id="searchChatBtn">
                    <div class="nav-icon">
                        <img src="~/images/icons/chat/Searchchat.png" alt="Search Chat" class="icon-img" />
                    </div>
                    <span>Search chat</span>
                </div>
                
                <div class="nav-item" id="historyChatBtn">
                    <div class="nav-icon">
                        <img src="~/images/icons/chat/Historychat.png" alt="History Chat" class="icon-img" />
                    </div>
                    <span>History chat</span>
                </div>
            </div>

            <!-- Chat History -->
            <div class="chat-history" id="chatHistory" style="display: none;">
                <h3>Recent Chats</h3>
                <div class="history-list">
                    <div class="history-item">Cách nấu phở bò</div>
                    <div class="history-item">Công thức bánh mì</div>
                    <div class="history-item">Món ăn Việt Nam</div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            @RenderBody()
        </div>
    </div>

    <script src="~/js/chat.js" asp-append-version="true"></script>
    
    <script>
        // Mobile menu toggle functionality
        function toggleMobileMenu() {
            const sidebar = document.getElementById('chatSidebar');
            if (sidebar.classList.contains('mobile-open')) {
                sidebar.classList.remove('mobile-open');
            } else {
                sidebar.classList.add('mobile-open');
            }
        }
        
        // Close mobile menu when clicking outside
        document.addEventListener('click', function(event) {
            const sidebar = document.getElementById('chatSidebar');
            const toggleButton = document.querySelector('.mobile-menu-toggle');
            
            if (window.innerWidth <= 768 && 
                !sidebar.contains(event.target) && 
                !toggleButton.contains(event.target)) {
                sidebar.classList.remove('mobile-open');
            }
        });
        
        // Close mobile menu on window resize
        window.addEventListener('resize', function() {
            const sidebar = document.getElementById('chatSidebar');
            if (window.innerWidth > 768) {
                sidebar.classList.remove('mobile-open');
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>