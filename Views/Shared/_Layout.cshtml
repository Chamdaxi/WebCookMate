<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CookMate</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Home Text -->
    <div class="home-text">@(ViewData["Title"] ?? "Home")</div>
    
    <!-- Header -->
    <header class="header">
        <!-- Top Row: Logo, Search Bar, and Notification -->
        <div class="header-top">
            <!-- Logo -->
            <a href="@Url.Action("Index", "Home")" class="logo">
                <img src="~/images/logos/LogoCook.jpg" alt="CookMate Logo" class="logo-img">
                <h1 class="logo-text">CookMate</h1>
            </a>

            <!-- Search Bar -->
            <div class="search-bar">
                <div class="search-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="m21 21-4.35-4.35"></path>
                    </svg>
                </div>
                <input type="text" placeholder="Tìm kiếm" class="search-input">
            </div>

            <!-- User Menu -->
            <div class="user-menu">
                @if (Context.Session.GetString("UserId") != null)
                {
                    <!-- Logged in user -->
                    <div class="user-info">
                        <span class="user-name">@Context.Session.GetString("UserFullName")</span>
                        <div class="user-dropdown">
                            <button class="user-avatar">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                            </button>
                            <div class="user-dropdown-menu">
                                <a href="#" class="dropdown-item">Profile</a>
                                <a href="#" class="dropdown-item">Settings</a>
                                <form asp-controller="Auth" asp-action="Logout" method="post" class="logout-form">
                                    <button type="submit" class="dropdown-item logout-btn">Logout</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Not logged in -->
                    <div class="auth-buttons">
                        <a href="@Url.Action("Login", "Auth")" class="auth-btn auth-btn-login">Login</a>
                        <a href="@Url.Action("Register", "Auth")" class="auth-btn auth-btn-register">Register</a>
                    </div>
                }
            </div>
        </div>
    </header>

    <!-- Navigation -->
    <nav class="navigation">
        <ul class="nav-menu">
            <li class="nav-item">
                <a href="@Url.Action("Index", "Home")" class="nav-link">Home</a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">Pantry</a>
                <svg class="dropdown-arrow" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="6,9 12,15 18,9"></polyline>
                </svg>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">Recipe</a>
                <svg class="dropdown-arrow" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="6,9 12,15 18,9"></polyline>
                </svg>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("MealPlan", "Home")" class="nav-link">Meal Plan</a>
                <svg class="dropdown-arrow" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="6,9 12,15 18,9"></polyline>
                </svg>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">Shopping List</a>
                <svg class="dropdown-arrow" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="6,9 12,15 18,9"></polyline>
                </svg>
            </li>
        </ul>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        @RenderBody()
    </main>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>