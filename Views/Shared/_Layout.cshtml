<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CookMate</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/recipes.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Home Text -->
    <div class="home-text">@(ViewData["Title"] ?? "Home")</div>
    
    <!-- Header Container (Fixed) -->
    <div class="header-container">
        <!-- Header -->
        <header class="header">
            <!-- Top Row: Logo, Search Bar, and Notification -->
            <div class="header-top">
                <!-- Logo -->
                <a href="@Url.Action("Index", "Home")" class="logo">
                    <img src="~/images/logos/LogoCook.jpg" alt="CookMate Logo" class="logo-img">
                    <h1 class="logo-text">CookMate</h1>
                </a>

                <!-- Search Bar -->
                <div class="search-bar">
                    <div class="search-icon">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="11" cy="11" r="8"></circle>
                            <path d="m21 21-4.35-4.35"></path>
                        </svg>
                    </div>
                    <input type="text" placeholder="Tìm kiếm" class="search-input">
                </div>

                <!-- User Menu -->
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="user-menu">
                        <div class="user-info">
                            <span class="user-name">@User.Identity.Name</span>
                            <div class="user-dropdown">
                                <a href="@Url.Action("UserProfile", "Auth")" class="dropdown-item">Profile</a>
                        <a href="@Url.Action("Logout", "Auth")" class="dropdown-item logout-btn">Đăng xuất</a>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="auth-buttons">
                        <a href="@Url.Action("Login", "Auth")" class="login-btn">Đăng nhập</a>
                    </div>
                }
            </div>
        </header>

        <!-- Navigation -->
        <nav class="navigation">
            <ul class="nav-menu">
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Home")" class="nav-link">Home</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">Pantry</a>
                    <svg class="dropdown-arrow" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="6,9 12,15 18,9"></polyline>
                    </svg>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("MealPlan", "Home")" class="nav-link">Meal Plan</a>
                    <svg class="dropdown-arrow" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="6,9 12,15 18,9"></polyline>
                    </svg>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Recipes", "Home")" class="nav-link">Recipes</a>
                    <svg class="dropdown-arrow" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="6,9 12,15 18,9"></polyline>
                    </svg>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">Shopping List</a>
                    <svg class="dropdown-arrow" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="6,9 12,15 18,9"></polyline>
                    </svg>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Main Content -->
    <main class="main-content">
        @RenderBody()
    </main>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>